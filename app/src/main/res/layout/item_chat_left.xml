<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/person_placeholder"
            app:riv_corner_radius="@dimen/_10sdp" />


        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/hello_how_are_you"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/_11sdp" />

        <RelativeLayout
            android:id="@+id/rl_audio_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.rygelouv.audiosensei.player.AudioSenseiPlayerView
                android:id="@+id/left_audio_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/iv_audio_view_left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"

                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:background="@drawable/audio_view" />
        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/left_uploaded_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="end"
            android:src="@drawable/place_holder"
            android:visibility="gone"
            app:riv_corner_radius="@dimen/_16sdp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvTimerleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTop"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="10:20AM"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp" />


</RelativeLayout>
